<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Contact"
            style="@style/HeadingText"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        android:padding="16dp"
        android:layout_marginBottom="16dp">
                <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                       android:textSize="15dp"
                        android:text="0300-1216743" />
        </LinearLayout>
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="34dp"
            android:layout_height="56dp"
            android:src="@drawable/delete"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/block_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        android:padding="16dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/name_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fahad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03011216725"
                android:textSize="15sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/delete_icon_2"
            android:layout_width="34dp"
            android:layout_height="56dp"
            android:src="@drawable/delete" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/block_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        android:padding="16dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/name_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waleed"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03007654368"
                android:textSize="15sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/delete_icon_3"
            android:layout_width="34dp"
            android:layout_height="56dp"
            android:src="@drawable/delete" />
    </LinearLayout>
    <Button
         android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Contact"
android:layout_margin="10dp"
        android:layout_gravity="center"/>

</LinearLayout>
